html
  head
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", crossorigin="anonymous")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
  body
    style.
      .price {
        color: red;
      }
      .details img{
        width : 200px
      }
      .game {
        padding: 20px;
        border-style: groove;
        border-radius: 8px;
      }
      .details {
        padding: 20px;

        text-align: left;
      }
      .reviews {
        padding: 10px;
        text-align: left;
      }
    include includes/navbar.pug
    
    .container#main
      h1= title
      p Welcome to #{title}!  Here are your search results: 
      .row
        for game in gameNameList
          .col-6.game
            .row
              .col-6.details
                a(href= "/games/" + game.id)
                  img(src= game.image)
                div.name
                  a(href= "/games/" + game.id) #{game.name} 
                if (game.price > 0) 
                  span.price ($#{game.price}) 
                else 
                  span.price ($#{game.msrp}) 
                if (game.msrp != 0 && game.msrp != game.price)
                  span.discountPerc (#{game.discountPerc}% 
                  if game.over
                    span.perc over)
                  else
                    span.perc off)
              .col-6.reviews 
                if (game.reviewList != 0)
                  div.review External Site Reviews:
                  for rev in game.reviewList
                    .each
                      a(href=rev.url)
                          if(rev.icon)
                            img.mr-1(src=rev.icon, height = 20)
                          else
                            img.mr-1(src="/images/linkicon.jpg", height = 20)
                      a(href=rev.url) #{rev.site}
                else 
                  span.nothing No Reviews Available :(

        if(page > 1)
          if (page == 2)
            a(href= "/" + (page - 1)) Previous 
          else
            a(href= "/games/search?gamename=" + name + "&pageid=" + (page - 1)) Previous 
          span.divvie | 
        a(href= "/games/search?gamename=" + name + "&pageid=" + (page + 1)) Next
        
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js", integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo", crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js", integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49", crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js", integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy", crossorigin="anonymous")
    include includes/footer.pug

