html
  include includes/header.pug
    style.
        .price {
            color: red;
        }
        .game img{
            width : 100%;
        }
  body
    
    include includes/navbar.pug
    
    .container#main
      h1= title
      p Articles 
      .row
        for review in reviewList
          .col-6.col-sm-4.col-md-6.review
            a(href= review.url)
                img(src= review.image width= "100" height= "100")
            a(href= review.url) #{review.title} 
            div.postdate Posted on #{review.created} at
            a(href= review.url) #{review.sname}
            div.description Description: "#{review.desc}"
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js", integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo", crossorigin="anonymous")
