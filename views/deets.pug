html
    include includes/header.pug
    body
        style.
            .game img{
                padding: 20px;

            }
            .vid {
                padding: 20px;
                border-radius: 8px;
                background-color: white;
                margin: 10px;  
                margin-top: 30px;              
            }
            .external {
                padding: 20px;
                border-radius: 8px;
                background-color: white;
                margin: 10px;  
                margin-top: 30px;              
            }
            .allprices {
                padding: 30px;
                border-radius: 8px;           
                background-color: white;
                margin: 10px;
                margin-top: 30px;              

            }
            .details {
                border-radius: 8px;
                padding: 40px;
                background-color: white;
            }
            #readmore {
                display: none;
            }
            .price {
                float: right;
            }
            .extraimg {
                display: none;
            }
            .actual {
                padding: 20px;
            }
            #otherLink {
                display: none;
            }
            .carousel-control-next-icon {
                background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E")
            }
            .carousel-control-prev-icon {
                background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E");
            }
        include includes/navbar.pug
        
        .container-fluid#main
            .container.actual
                .row
                    .col-6.game
                        div(id = "carousel" class = "carousel slide" data-ride = "carousel" data-interval="false")
                            o1(class ="carousel-indicators")
                                
                                li(data-target = "#carousel" data-slide-to="0" class = "active")
                                each img in images
                                    li(data-target = "#carousel")
                                    
                            div(class="carousel-inner")
                                div(class = "carousel-item active")
                                    img(class = "d-block w-100" src = game.image alt = "Slide Not Available" height = 400)
                                each img in images
                                    div(class = "carousel-item")
                                        img(class = "d-block w-100" src = img.url alt = "Slide Not Available" height = 400)
                            a(class="carousel-control-prev" href="#carousel" role="button" data-slide="prev")
                                span(class="carousel-control-prev-icon" aria-hidden="true")
                                span(class="sr-only") Previous
                            a(class="carousel-control-next" href="#carousel" role="button" data-slide="next")
                                span(class="carousel-control-next-icon" aria-hidden="true")
                                span(class="sr-only") Next
                        
                        
                        
                        
                        
                        
                        
                        div.extraimg
                            each img in images
                                .eachimg
                                    img(src= img.url height = 400)
                        
                    .col-6.details
                        h2  
                            a(href=game.url) #{game.name}
                        div.year Year Published: 
                            if game.year
                                span.year #{game.year}
                            else
                                span.year N/A
                        div.player Number of Players: #{game.minplayers} 
                            if game.minplayers != game.maxplayers
                                span.rangeplayers - #{game.maxplayers}
                            
                        div.playtime Play Time: #{game.minplaytime} - #{game.maxplaytime} minutes
                        div.age Recommended Age: #{game.age} and Above
                        if game.price
                            div.fprice Price: $#{game.price}
                        div.msrp MSRP: $#{game.msrp}
                        div.description Game Description: 
                            span#short #{desc1} 
                            span#readmore #{desc2}
                            if more
                                .more
                                    a(href = '#', id="link") Show more...
                            .less
                                a(href = '#', id="otherLink") Show less
                        

                .row
                    .col-3.external
                        div.reviews 
                            h5 External Site Reviews: 
                            if(reviews.length > 0)
                                each rev in reviews
                                    p.eachrev
                                        a(href=rev.url)
                                        if(rev.icon)
                                            img.mr-1(src=rev.icon, height = 30)
                                        else
                                            img.mr-1(src="/images/linkicon.jpg", height = 40)
                                        a(href=rev.url) #{rev.site}
                            else    
                                .nothing No Reviews Available
                    
                    .col-4.allprices
                        div.prices 
                            h5 Prices: 
                            if(prices.length > 0)
                                each price in prices
                                    p.eachprice
                                        a(href=price.url) #{price.site}
                                            span.price #{price.price}
                            else    
                                .noprices No Prices Available

                    .col-4.vid  
                        .vids   
                            h5 Related Videos:
                            if(videos.length > 0)
                                each video in videos
                                    p.eachvid
                                        a(href=video.url)
                                        if(video.icon)
                                            img.mr-1(src=video.icon, height = 30)
                                        else
                                            img.mr-1(src="/images/linkicon.jpg", height = 40)
                                        a(href=video.url) #{video.title}
                            else    
                                .novideos No Videos Available

  
                    
                
        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js", integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo", crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js", integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49", crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js", integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy", crossorigin="anonymous")
        include includes/footer.pug
    script.
        $('#link').click(function(e){
            e.preventDefault();
            $("#link").hide();
            $("#short").hide();
            $("#readmore").show();
            $("#otherLink").show();
        })

    script.
        $('#otherLink').click(function(e){
            e.preventDefault();
            $("#link").show();
            $("#readmore").hide();
            $("#short").show();
            $("#otherLink").hide();
        })