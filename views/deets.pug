html
  include includes/header.pug
    style.
        .price {
            color: red;
        }
        .game img{
            width : 100%;
        }
  body
    
    include includes/navbar.pug
    
    .container#main
      h1= title
      
      .row
        .col-6.game
            a(href=game.url)
                img(src= game.image)
            p Game Details For #{game.name}
                
        .col-6
            a(href=game.url) #{game.name}
            div.year Year Published: 
                if game.year
                    span.year #{game.year}
                else
                    span.year N/A
            div.player Number of Players: #{game.minplayers} 
                if game.minplayers != game.maxplayers
                    span.rangeplayers - #{game.maxplayers}
                
            div.playtime Play Time: #{game.minplaytime} - #{game.maxplaytime} minutes
            div.age Recommended Age: #{game.age} and Above
            if game.price
                div.price Price: $#{game.price}
            div.msrp MSRP: $#{game.msrp}
            div.description Game Description: #{game.desc}
            
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js", integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo", crossorigin="anonymous")
